    <property>
      <code>{{velocity}}
  ## Current document reference
  #set ($docRef = $doc.getDocumentReference())
  ## Collection Book reference
  #set ($collectionRef = $services.bookversions.getVersionedCollectionReference($docRef))
  ## Get the current selected language
  #set ($selectedLanguage = $services.bookversions.getSelectedLanguage($collectionRef))
  ## Get parameters
  #set ($contentLanguage = $wikimacro.parameters.language)
  #set ($translatedTitle = $wikimacro.parameters.title)
  ## Set translated title object if not present for current language
  #if ("$!{translatedTitle}" != '')
    ## Get all title translation objects
    #set ($titleObjects = $doc.getObjects('BookVersions.Code.PageTitleTranslationClass'))
    ## Flag to track if we found an object for this language
    #set ($foundObject = false)
    ## If we have existing objects, check if one exists for this language
    #if ($titleObjects &amp;&amp; $titleObjects.size() &gt; 0)
      #foreach ($obj in $titleObjects)
        #if ($obj.getProperty('language').value == "$!{contentLanguage}")
          ## Update existing object's title
          #set ($discard = $obj.set('title', $translatedTitle))
          #set ($foundObject = true)
          ## Break since we found and updated the object
          #break
        #end
      #end
    #end

    ## If no object exists for this language, create a new one
    #if (!$foundObject)
      #set ($newObj = $doc.newObject('BookVersions.Code.PageTitleTranslationClass'))
      #set ($discard = $newObj.set('language', $contentLanguage))
      #set ($discard = $newObj.set('title', $translatedTitle))
    #end

    ## Save the document to persist changes
    #set ($discard = $doc.save('Added/Updated title translation'))
  #end
  ## Display content only if the seleceted language is the one set as parameter
  #if ($selectedLanguage == $contentLanguage)
    $wikimacro.content
  #end
{{/velocity}}</code>
